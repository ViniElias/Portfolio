  <!-- anima√ß√£o do t√≠tulo -->
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const titulo = "Ol√°! Me chamo Vinicius Elias üëã";
      const el = document.getElementById('titulo-principal');
      let i = 0;
      const cursor = document.createElement('span');
      cursor.innerText = '|';
      cursor.classList.add('cursor');
      el.appendChild(cursor);
      function digitar() {
        if (i < titulo.length) {
          el.insertBefore(
            document.createTextNode(titulo.charAt(i)),
            cursor
          );
          i++;
          setTimeout(digitar, 100);
        }
      }
      digitar();
    });
  </script>

